<script>
  function addCart(e, id, name, price, image) {
      e.preventDefault();
      
      let cart_arr = JSON.parse(localStorage.getItem("cart"));
      if (!cart_arr) {
          cart_arr = [];
          cart_arr.push({ idSP: id, nameSP: name, priceSP: price, imageSP: image, quantity: 1 });
      } else {
          let item = cart_arr.find((item) => item.id == id);
          if (item) item.quantity++;
          else cart_arr.push({ id: id, name: name, price: price, image: image, quantity: 1 });
      }

      alert('Thêm giỏ hàng thành công')

      localStorage.setItem("cart", JSON.stringify(cart_arr));
  }
</script>
