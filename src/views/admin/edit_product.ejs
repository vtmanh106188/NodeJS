        <!--Add product admin-->
        <div class="col-sm-12 col-xl-9">
          <div class="rounded h-100 p-4">
            <h6 class="mb-4">Sửa Sản Phẩm</h6>
            <form action="/admin/update_product" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                <label for="nameSP" class="form-label">Tên Sản Phẩm:</label>
                <input
                  type="text"
                  class="form-control"
                  id="nameSP"
                  name="nameSP"
                  value="<%= viewProduct.nameSP %>"
                />
              </div>
              <div class="mb-3">
                <label for="priceSP" class="form-label">Giá Sản Phẩm:</label>
                <input
                  type="number"
                  class="form-control"
                  id="priceSP"
                  name="priceSP"
                  value="<%= viewProduct.priceSP %>"
                />
              </div>
              <div class="mb-3">
                <label for="idCat" class="form-label">Loại Sản Phẩm:</label>
                <select class="form-select" name="idCat" id="idCat">
                  <%
                    for ( var i = 0; i < listCategoies.length; i++ )
                    {
                        var isSelected = ( viewProduct.nameCat == listCategoies[i].nameCat ) ? "selected" : "";
                  %>  
                    <option value="<%= i+1 %>" <%=isSelected %> >
                        <%= listCategoies[i].nameCat %>
                    </option>
                  <% } %>
                </select>
              </div>
              <div class="mb-3">
                <label for="detailSP class="form-label">Mô Tả:</label>
                <input
                  type="text"
                  class="form-control"
                  id="detailSP"
                  name="detailSP"
                  style="height: 100px"
                  value="<%= viewProduct.detailSP %>"
                />
              </div>
              <div class="mb-3">
                <label for="imageSP" class="form-label">Hình Ảnh:</label>
                <img src="/img/<%= viewProduct.imageSP %>" alt="" width="200">
                <input
                  type="file"
                  class="form-control"
                  id="imageSP"
                  name="imageSP"
                />
                <input type="hidden" name="imageSP" value="<%= viewProduct.imageSP %>">
              </div>
              <input type="text" value="<%= viewProduct.idSP %>" hidden name="idSP" />
              <button type="submit" class="btn btn-primary">Cập Nhật</button>
              <button type="submit" class="btn btn-primary">Hủy</button>
            </form>
          </div>
        </div>
      </div>
      <!-- Content End -->

      <!-- Back to Top -->
