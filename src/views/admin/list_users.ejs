<script>
    var url = "http://localhost:1996/api/list_users";
    fetch(url)
      .then(res=> res.json())
      .then(listUsers => {
        listUsers.forEach(us => {
          str = `
          <tr>
                    <th scope="row">${us.idUser}</th>
                    <td>${us.username}</td>
                    
                    <td>${us.email}</td>
                    <td>${us.hoTen}</td>
                    <td>${us.soThich}</td>
                    <td>${us.vaiTro}</td>
                    <td class="d-flex">
            
                        <button><a href="/detail_user/${us.idUser}">Xem</a></button>
                        <button><a href="/edit_user/${us.idUser}">Sửa</a></button>
                        <button type="button" onclick="xoa(${us.idUser})">Xóa</button>
                        
                    </td>
                  </tr>
           `
        
        document.querySelector('#list_users').innerHTML += str;
        })
      })
        
  </script>
  <script>
    const xoa = (id) => {
      var txt;
      var r = confirm("Chắc chắn xóa???");
      if (r == true) {
        let url = `http://localhost:1996/api/delete_user/${id}`;
  
        fetch(url, { method: "DELETE" })
          .then((response) => response.json())
          .then((data) => {
            document.location = "/list_users";
          })
          .catch((err) => console.log(err));
      } else {
        txt = "Không Xóa";
        event.preventDefault();
      }
      console.log(txt);
    };
  </script>
